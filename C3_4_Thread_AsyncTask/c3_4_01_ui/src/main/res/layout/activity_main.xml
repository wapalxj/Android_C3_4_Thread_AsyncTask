<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical" tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView" android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn1_no_Thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1-work-no-Thread"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn2_Thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2-work-Thread"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn3_Thread_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3-work-Thread-post"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn4_no_Thread_syntask_exe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4-Thread-syntask_exe"
        android:textAllCaps="false"/>
</LinearLayout>
